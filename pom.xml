<build>
        <plugins>
            <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>1.3.6.RELEASE</version>
        <configuration>  
                    <jvmArguments>-Dfile.encoding=UTF-8</jvmArguments>  
        </configuration>  
        <executions>
          <execution>
            <id>everything</id>
            <goals>
              <goal>repackage</goal>
            </goals>
            <configuration>
              <mainClass>com.bs.wt.Application</mainClass>
              <layout>ZIP</layout>
            </configuration>
          </execution>
        </executions>
